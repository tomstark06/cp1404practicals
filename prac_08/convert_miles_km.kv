BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: user_input
            text: app.number_input
            size_hint_x: 0.75
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_convert()
    Label:
        id: conversion_output
        text: app.number_output